<Alloy>
	<TabGroup id="mainWin" backgroundColor="white" onPostlayout="onPostLayout">
		<Menu>
			<MenuItem id="bookNow"   onClick="onBookNowClick"/>
			<MenuItem id="bookedCabs"   onClick="onBookedCabsClick"/>
			<MenuItem id="userProfile"  onClick="onUserProfileClick"/>
		</Menu>
		<Tab id="cabsListTab" title="Cab List" icon="KS_nav_views.png">
			<Window id="cabsInListWin" >
				<ProgressIndicator platform="android" ns="Ti.UI.Android" platform="android" id="progressIndicator"/>
				<ListView id="cabListView" defaultItemTemplate="template" onItemclick="onListViewItemClick" separatorColor="black" >
					<HeaderView>
						<View backgroundColor="#000000" height="1dp" width="100%"/>
					</HeaderView>
					<Templates>
						<ItemTemplate name="template">
							<ImageView bindId="cabImage" id="cabImage" />
							<Label bindId="cabName" id="cabName" />
							<Label bindId="distance" id="distance" />
						</ItemTemplate>
					</Templates>
					<FooterView>
						<View backgroundColor="#000000" height="1dp" width="100%"/>
					</FooterView>
				</ListView>
			</Window>
		</Tab>
		<Tab id="cabsMapTab" title="Show on Map" icon="KS_nav_views.png">
			<Window id="cabsInMapWin" >
				<Module id="mapview" module="ti.map" method="createView" onClick="onMapViewClick" />
			</Window>
		</Tab>
	</TabGroup>
</Alloy>