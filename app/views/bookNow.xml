<Alloy>
	<Window id="bookNowWin" onPostlayout="winPostlayout">
		<ActionBar id="actionbar"  onHomeIconItemSelected="onHomeIconItemSelected" homeButtonEnabled="true" displayHomeAsUp="true"/>
		<ProgressIndicator ns="Ti.UI.Android" platform="android" id="progressBar"/>
		<View id="cabBookInputParentView" >
			<View id="cabBookInputContainer">
				<View id="cabSourceView">
					<Label id="cabSourceLabel"  />
					<Picker id="sourcePicker" color="black" selectionIndicator="true" useSpinner="false" onChange="pickerValueChangedListener"></Picker>
				</View>
				<View id="cabDestinationView">
					<Label id="cabDestinationLabel"  />
					<Picker id="destinationPicker" onChange="pickerValueChangedListener" ></Picker>
				</View>
				<Button id="searchButton" onClick="onSearchClick"/>
				<ListView id="availableCabsListView" onItemclick="onListViewItemClick">
					<HeaderView>
						<View backgroundColor="#000000" height="1dp" width="100%"/>
					</HeaderView>
					<Templates>
						<ItemTemplate name="template">
							<ImageView bindId="cabImage" id="cabImage" />
							<Label bindId="cabName" id="cabName" />
							<Label bindId="cabType" id="cabType" />
						</ItemTemplate>
					</Templates>
					<FooterView>
						<View backgroundColor="#000000" height="1dp" width="100%"/>
					</FooterView>
				</ListView>
			</View>
		</View>
	</Window>
</Alloy>