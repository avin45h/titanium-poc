<Alloy>
	<Window id="mainWin" class="container">
		<ProgressIndicator platform="android" ns="Ti.UI.Android" platform="android" id="progressIndicator"/>
		<View id="detailsParentView" >
			<ImageView id="carImageView"/>
			<View id="cabDetailContainer">
				<View id="cabNameView">
					<Label id="cabNameLabel"  />
					<Label id="cabNameValueLabel"  />
				</View>
				<View id="cabDistanceView">
					<Label id="cabDistanceLabel"  />
					<Label id="cabDistanceValueLabel"  />
				</View>
				<View id="driverNameView">
					<Label id="driverNameLabel"  />
					<Label id="driverNameValueLabel"  />
				</View>
				<View id="driverPhoneNumberView">
					<Label id="driverPhoneNumberLabel"  />
					<Label id="driverPhoneNumberValueLabel"  onClick = "initiateCall"/>
				</View>
				<Button id="bookButton" onClick="onBookClick"/>
			</View>
		</View>
	</Window>
</Alloy>